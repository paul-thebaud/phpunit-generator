{
  "name": "paulthebaud/phpunit-generator",
  "description": "A PHPUnit 6 / 7 tests skeletons generator",
  "homepage": "https://github.com/paul-thebaud/phpunit-generator",
  "license": "MIT",
  "authors": [
    {
      "name": "Paul Th√©baud",
      "email": "paul.thebaud29@gmail.com"
    }
  ],
  "keywords": [
    "php",
    "php7",
    "phpunit",
    "generator",
    "unit",
    "test",
    "tests"
  ],
  "bin": [
    "phpunitgen"
  ],
  "require": {
    "php": "~7.1",
    "doctrine/collections": "^1.5",
    "doctrine/lexer": "^1.0",
    "league/flysystem": "^1.0",
    "nikic/php-parser": "^4.0",
    "psr/container": "^1.0.0",
    "respect/validation": "^1.1",
    "slim/php-view": "^2.2",
    "symfony/console": "^4.0",
    "symfony/stopwatch": "^4.0",
    "symfony/yaml": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0|^7.0",
    "squizlabs/php_codesniffer": "^3.0",
    "phploc/phploc": "^4.0",
    "php-coveralls/php-coveralls": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "PhpUnitGen\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FunctionalTests\\PhpUnitGen\\": "tests/functional/",
      "UnitTests\\PhpUnitGen\\": "tests/unit/"
    }
  },
  "scripts": {
    "cs-check": "php ./vendor/bin/phpcs",
    "cs-fix": "php ./vendor/bin/phpcbf",
    "phpunit": "php ./vendor/bin/phpunit",
    "test": [
      "@cs-check",
      "@phpunit"
    ]
  }
}
